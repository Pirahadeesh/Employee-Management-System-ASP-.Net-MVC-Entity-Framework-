@{
    ViewBag.Title = "CustomerCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">

    <div class="card-body">
        <form action="/Finance/CustomerCreate" method="post">

            <div class="col-md-4 mb-3">
                <label for="CustomerCode">Customer Code</label>
                <input type="text" id="CustomerCode" name="CustomerCode" class="form-control" />
            </div>

            <div class="col-md-4 mb-3">
                <label for="CustomerName">Customer Name</label>
                <input type="text" id="CustomerName" name="CustomerName" class="form-control" />
            </div>

            <div class="col-md-4 mb-3">
                <input class="form-check-input" type="checkbox" name="IsActive" id="invalidCheck">
                <label for="IsActive">IsActive</label>
            </div>

            <button type="submit" name="action" value="save-and-continue" class="btn btn-success">Save</button>
        </form>

    </div>
</div>
