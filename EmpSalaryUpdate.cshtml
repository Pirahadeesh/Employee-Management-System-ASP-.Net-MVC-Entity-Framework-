@model DGHCM.Models.Emp_SalaryDetails
@{
    ViewBag.Title = "EmpSalaryCreate";

}

<style>

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins',sans-serif;
    }

    .body {
        /*height: 100vh;*/
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 10px;
        background: linear-gradient(135deg, #71b7e6, #9b59b6);
    }

    .container1 {
        max-width: 700px;
        background-color: #fff;
        padding: 25px 30px;
        border-radius: 5px;
        box-shadow: 0 5px 10px rgba(0,0,0,0.15);
    }

        .container1 .title {
            font-size: 25px;
            font-weight: 500;
            position: relative;
        }

            .container1 .title::before {
                content: "";
                position: absolute;
                left: 0;
                bottom: 0;
                height: 3px;
                width: 30px;
                border-radius: 5px;
                background: linear-gradient(135deg, #71b7e6, #9b59b6);
            }

    .content form .salary-details {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin: 20px 0 12px 0;
    }

    form .salary-details .form-floating mb-3 {
        margin-bottom: 15px;
        width: calc(100% / 2 - 20px);
    }

    form .salary-details .col-md-4 mb-3 {
        margin-bottom: 15px;
        width: calc(100% / 2 - 20px);
    }

    form .salary-details .input-box {
        margin-bottom: 15px;
        width: calc(100% / 2 - 20px);
    }

    form .input-box span.details {
        display: block;
        font-weight: 500;
        margin-bottom: 5px;
    }

    .salary-details .form-floating mb-3 input {
        height: 45px;
        width: 100%;
        outline: none;
        font-size: 16px;
        border-radius: 5px;
        padding-inline-start: 15px;
        border: 1px solid #ccc;
        border-bottom-width: 2px;
        transition: all 0.3s ease;
    }

    .salary-details .col-md-4 mb-3 input {
        height: 45px;
        width: 100%;
        outline: none;
        font-size: 16px;
        border-radius: 5px;
        padding-inline-start: 15px;
        border: 1px solid #ccc;
        border-bottom-width: 2px;
        transition: all 0.3s ease;
    }

    .salary-details .input-box input {
        height: 45px;
        width: 100%;
        outline: none;
        font-size: 16px;
        border-radius: 5px;
        padding-left: 15px;
        border: 1px solid #ccc;
        border-bottom-width: 2px;
        transition: all 0.3s ease;
    }

        .salary-details .input-box input:focus,
        .salary-details .input-box input:valid {
            border-color: #9b59b6;
        }

    .salary-details .form-floating mb-3 input:focus,
    .salary-details .form-floating mb-3 input:valid {
        border-color: #9b59b6;
    }

    .salary-details .col-md-4 mb-3 input:focus,
    .salary-details .col-md-4 mb-3 input:valid {
        border-color: #9b59b6;
    }


    form .CreatedBy .CreatedBy {
        font-size: 20px;
        font-weight: 500;
    }

    form .CreateDate .CreateDate {
        font-size: 20px;
        font-weight: 500;
    }

    form .UpdatedBy .UpdatedBy {
        font-size: 20px;
        font-weight: 500;
    }

    form .UpdatedBy .UpdatedBy {
        font-size: 20px;
        font-weight: 500;
    }

    form .button {
        height: 45px;
        margin: 35px 0
    }

        form .button input {
            height: 100%;
            width: 100%;
            border-radius: 5px;
            border: none;
            color: #fff;
            font-size: 18px;
            font-weight: 500;
            letter-spacing: 1px;
            cursor: pointer;
            transition: all 0.3s ease;
            background: linear-gradient(135deg, #71b7e6, #9b59b6);
        }

            form .button input:hover {
                /* transform: scale(0.99); */
                background: linear-gradient(-135deg, #71b7e6, #9b59b6);
            }

    form .salary-details .form-floating mb-3 {
        margin-bottom: 15px;
        width: 100%;
    }

    form .salary-details .col-md-4 mb-3 {
        margin-bottom: 15px;
        width: 100%;
    }

    form .salary-details .input-box {
        margin-bottom: 15px;
        width: 100%;
        padding-left: 15px;
    }

    .content form .salary-details {
        max-height: 300px;
        overflow-y: scroll;
    }

    .salary-details::-webkit-scrollbar {
        width: 5px;
    }

    .container1 .content {
        flex-direction: row-reverse;
    }

    #label {
        margin-left: 12px;
        width: 162px;
    }
</style>

<h2>SalaryDetails</h2>
<form class="needs-validation" name="supdate" method="post" id="fileForm" enctype="multipart/form-data">
    <div class="body">
        <div class="container1">
            <div class="title">SalaryDetails</div>
            <div class="content">
                <div class="salary-details row">
                    <div class="row g-3 align-items-center col-md-6">
                        <span class="details">EmployeeName</span>
                        @Html.DropDownList("EmployeeList", null, "--select--", htmlAttributes: new { @id = "EmployeeId", @class = "form-control form-select selectpicker" })
                    </div>
                    <div class="row g-3 align-items-center col-md-6">
                        <span class="details">SalaryType</span>
                        @Html.DropDownList("SalaryType", null, "--select--", htmlAttributes: new { @id = "SalaryTypeId", @class = "form-control form-select selectpicker" })
                    </div>
                    <div class="row g-3 align-items-center col-md-6">
                        <span class="details">Amount</span>
                        <input type="text" class="form-control" id="credit" placeholder="enter amount" name="Amount" value="@Model.Amount">
                    </div>

                    <div class=" form-check form-switch  col-md-6">
                        @if (Model.IsActive == true)
                        {
                            <input class="form-check-input" type="checkbox" id="active" name="IsActive" value="@Model.IsActive" checked>
                        }
                        else
                        {
                            <input class="form-check-input" type="checkbox" id="active" name="IsActive" value="@Model.IsActive">
                        }
                        <label class="form-check-label" for="flexSwitchCheckDefault">Status</label>
                    </div>
                    <div>
                     
                        <input type="hidden" class="form-control" id="id" placeholder="enter id" name="SalaryId" value="@Model.SalaryId">
                    </div>
                </div>
                <div class="button text-center">
                    <input type="submit" name="action" value="Submit">
                </div>
                <div class="col-12" align="center">
                    <button class="btn btn-outline-primary">@Html.ActionLink("Back To List", "EmpSalaryIndex")</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        function validate() {
            let name = document.forms["supdate"]["EmployeeName"].value;
            if (name == "")
                alert("Please enter the name");
            return false;
            let name = document.forms["supdate"]["SalaryType"].value;
            if (name == "")
                alert("Please enter the name");
            return false;
            let name = document.forms["supdate"]["Amount"].value;
            if (name == "")
                alert("Please enter the name");
            return false;
        }
    </script>


    </form>