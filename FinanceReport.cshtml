@model List<DGHCM.ViewModel.FinanceVM>@{    ViewBag.Title = "FinanceReport";}<div class="container-fluid">    <div class="card">        <div class="card-header  text-black d-flex flex-wrap justify-content-between align-items-center">            <div class="card-title text-black mb-0 p-0">Finance Report</div>            <div>                <a href="~/Finance/paymentDetailIndex" class="btn btn-transparent border border-black" data-toggle="modal"><i class="fa-solid fa-circle-arrow-left"></i> <span> Back</span></a>            </div>        </div>                <div class="card-body">            <div class="col-md-4 mb-3">                <label for="attendancedate">Month and Year</label>                <input type="month" class="form-control" id="attendancedate" name="attendancedate" value="@DateTime.Today.ToString("yyyy-MM")" autocomplete="on" onchange="showTable()" />            </div>            <form class="main" name="Display">                <table class="table  table-striped table-hover mt-2" id="FinanceReport">                    <thead class="bg-secondary-light">                        <tr align="center">                            <th>S.No</th>                            <th>Reciver type</th>                            <th>Account</th>                            <th>Credit or Debit</th>                            <th>Amount</th>                            @*<th>Balance</th>*@                        </tr>                    </thead>                    <tbody>                        @{int i = 1;}                        @foreach (var dr in Model)                        {            <tr>                <td class="text-center">@i</td>                <td class="text-center" id="detailstype_@i">@dr.DetailsType</td>                <td class="text-center" id="bankid_@i">@dr.BankId</td>                <td class="text-lg-end" id="debitorcredit_@i">@dr.DebitOrCredit</td>                <td class="text-lg-end" id="amount_@i">@dr.Amount</td>               @* <td class="text-lg-end" id="absent_@i"></td>*@            </tr>            i++;        }                    </tbody>                </table>            </form>        </div>    </div></div><script>    function showTable() {        var dateInput = document.getElementById("attendancedate");        var tableForm = document.querySelector("form[name='Display']");        if (dateInput.value !== "") {            tableForm.style.display = "block";            getAttendanceReport();        } else {            tableForm.style.display = "none";        }    }    $(document).ready(function () {        showTable();        $("#attendancedate").on("change", function () {            Report();        });    });    function Report() {        var selectedDate = document.getElementById("attendancedate").value;        $.ajax({            url: '@Url.Action("FinanceReport", "FinanceReport")',            type: 'POST',            data: { selectedDate: selectedDate },            success: function (data) {                updateAttendanceTable(data);            },            error: function (xhr, status, error) {                console.error(xhr.responseText);            }        });    }    function updateAttendanceTable(data) {        var tbody = $('#FinanceReport tbody');        tbody.empty();        $.each(data, function (index, record) {            var newRow = '<tr align="center">' +                '<td>' + (index + 1) + '</td>' +                '<td id="detailstype_' + index + '">' + record.DetailsType + '</td>' +                '<td id="bankid_' + index + '">' + record.BankId + '</td>' +                '<td id="debitorcredit_' + index + '">' + record.DebitOrCredit + '</td>' +                '<td id="amount_' + index + '">' + record.Amount + '</td>' +               /* '<td id="absent_' + index + '">' + record.AbsentDays + '</td>' +*/                '</tr>';            tbody.append(newRow);        });    }</script>