@model List<DGHCM.Models.AccountMaster>
@{
    ViewBag.Title = "AccountMastersIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    body {
        background-image: url('../../content/images/office image.png');
        background-size: cover;
    }

    .card {
        background: #fff5;
        backdrop-filter: blur(7px);
        border-radius: 50%
    }

    .card-header {
        background: #ffffffa1;
    }



    .card-body {
        background: #fffb;
    }

    thead th {
        background: #d5d1defe;
    }
</style>
<div class="container">
    <div class="card">
        <div class="card-header  text-black d-flex flex-wrap justify-content-between align-items-center">

            <div>
                <h2 class="text-black m-0">Account Master</h2>
            </div>
            <div>
                <a href="~/Finance/AccountMastersCreate" class="btn btn-transparent" data-toggle="modal"><i class="fa-solid fa-circle-plus fa-lg"></i><span>Add New</span></a>
            </div>
        </div>

        <div class="card-body ">
            <div class="container">
                <form class="main" name="Display">


                    @if (Model != null && Model.Count > 0)
                    {
                        <table class="table table-bordered table-striped table-hover mt-2">
                            <thead class="bg-secondary-light">
                                <tr align="center">
                                    <th scope="col">S No</th>
                                    <th scope="col">Account Name</th>
                                    <th scope="col">Opening Balance</th>
                                    <th scope="col">Account type</th>
                                    <th scope="col">Is Active</th>
                                    <th colspan="2">Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int i = 1;}
                                @foreach (var dr in Model)
                                {

                                    <tr align="center">
                                        <td>@i</td>
                                        <td hidden="hidden">@dr.AccountMasterId</td>
                                        <td hidden="hidden">@dr.AccountCode</td>
                                        <td>@dr.AccountName</td>
                                        <td>@dr.OpeningBalance</td>
                                        <td>@dr.BankOrGL</td>
                                        <td>
                                            @if (dr.IsActive == true)
                                            {
                                                <span class="badge rounded-pill bg-success">InActive</span>}
                                            else
                                            {
                                                <span class="badge rounded-pill bg-danger">Deactive</span>}
                                        </td>

                                        <td>

                                            <a href="@Url.Action("AccountMastersEdit", "Finance", new { Id = dr.AccountMasterId })"><i class="fa fa-edit text-primary fa-lg"></i></a>
                                            |
                                            <a href="@Url.Action("AccountMastersDelete", "Finance", new { Id = dr.AccountMasterId })"><i class="fa fa-trash text-danger fa-lg"></i></a>

                                        </td>
                                    </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <span> No records found!!</span>
                    }

                </form>
            </div>
        </div>
    </div>
</div>


