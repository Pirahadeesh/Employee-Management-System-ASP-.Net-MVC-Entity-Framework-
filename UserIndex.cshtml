@model List<DGHCM.Models.UserDetail>
@{
    ViewBag.Title = "UserIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="card">
        <div class="card-header  text-black d-flex flex-wrap justify-content-between align-items-center">
            <div class="card-title text-black mb-0 p-0"> User Index</div>
          
            <div>
                <a href="~//Login/UserCreate" class="btn btn-transparent" data-toggle="modal"><i class="fa-solid fa-circle-plus"></i><span> Add New</span></a>
                @*<a href="#deleteEmployeeModal" class="btn btn-transparent" data-toggle="modal"><i class="fa-solid fa-circle-arrow-left"></i> <span> Back</span></a>*@
            </div>

        </div>
        <div class="card-body">
            <form class="main" name="Display">

                @{
                    if (Model != null && Model.Count > 0)
                    {
                                <table class="table table-bordered table-striped table-hover mt-2">
                                                    <thead class="bg-secondary-light">
                                                        <tr align="center">

                                                            <th hidden="hidden" scope="col">User Id</th>
                                                            <th scope="col">User Name</th>
                                                            <th scope="col">User Password</th>
                                                            <th scope="col">Is Active</th>
                                                            <th scope="col"> Action </th>

                                                        </tr>
                                                    </thead>

                                    @foreach (var dr in Model)
                                    {
                                        <tbody>
                                            <tr align="center">
                                                <td hidden="hidden" id="id">@dr.UserId</td>
                                                <td>@dr.UserName</td>
                                                <td>@dr.Userpassword</td>
                                                <td>
                                                    @if (dr.IsActive == true)
                                                    {
                                                        <span class="badge rounded-pill bg-success">Active</span>}
                                                    else

                                                    {<span class="badge rounded-pill bg-danger">Deactive</span>}
                                                </td>
                                                

                                                <td>



                                                    <div class="d-grid gap-2 d-md-block">
                                                        <a href="~/Login/UserEdit?id=@dr.UserId"><i class="fa fa-edit text-primary"></i></a>
                                                        <a href="~/Login/UserDelete?id=@dr.UserId"><i class="fa fa-trash text-danger"></i></a>

                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    }
                                </table>

                    }

                    else
                    {
                        <span> No records found!!</span>
                    }

                }
            </form>
        </div>
        </div>
</div>