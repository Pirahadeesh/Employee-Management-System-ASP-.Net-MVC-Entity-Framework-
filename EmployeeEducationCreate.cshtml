@model DGHCM.Models.EmployeeEducation
@{
    ViewBag.Title = "EmployeeEducationCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header  text-black d-flex flex-wrap justify-content-between align-items-center">
            <div class="card-title text-black mb-0 p-0">Education</div>
            <div>
                <a href="~/Employee/EmployeeEducationIndex" class="btn btn-transparent border border-black" data-toggle="modal"><i class="fa-solid fa-circle-arrow-left"></i> <span> Back</span></a>
            </div>
        </div>
        <!--<div class="card-header bg-df-success text-white d-flex flex-wrap justify-content-between align-items-center">

            <div>
                <h2 class="text-white m-0">Education</h2>
            </div>
            <div>-->
                @*<a href="#" class="btn btn-warning" data-toggle="modal"><i class="fa-solid fa-floppy-disk"></i><span> Save</span></a>*@
                <!--<a href="~/Employee/EmployeeEducationIndex" class="btn btn-df-secondary" data-toggle="modal"><i class="fa-solid fa-circle-arrow-left"></i> <span> Back</span></a>
            </div>
        </div>-->

        <div class="card-body p-4">
            <div class="box">
                <form class="needs-validation" name="createform" method="post" id="fileForm" enctype="multipart/form-data">

                    <div id="educationSections">

                        <!--<div class="col-md-4 mb-3">
                    <label for="name">Name</label>-->
                        @*
                        @Html.DropDownList("EmployeeList", null, "--select--", htmlAttributes: new { @id = "EmployeeId", @class = "form-control form-select selectpicker" })*@
                        <!--</div>-->
                        <div class="container ">
                            <div class="row mb-2">
                                <div class="col">
                                    <label for="course">Course</label>
                                    <input type="text" class="form-control" id="course" placeholder="Course" name="course" required>
                                    <div class="valid-feedback">
                                        Please Enter the Course Name!
                                    </div>
                                </div>

                                <div class="col">
                                    <label for="institution">Institution</label>
                                    <input type="text" class="form-control" id="institution" placeholder="Institution" name="institution" required>
                                    <div class="valid-feedback">
                                        Please Enter the Institution!
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col">
                                    <label for="percentage">Percentage</label>
                                    <input type="text" class="form-control" id="percentage" placeholder="percentage" name="percentage" required>
                                    <div class="valid-feedback">
                                        Please Enter the Percentage!
                                    </div>
                                </div>

                                <div class="col">
                                    <label for="DocumentType">DocumentType</label>
                                    @Html.DropDownList("DocumentList", null, "--select--", htmlAttributes: new { @class = "form-control form-select selectpicker" })
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col">
                                    <label for="formFileMultiple" class="form-label">Document</label>
                                    <input class="form-control" type="file" name="file" id="fileInput" multiple>
                                </div>

                                <div class="col">
                                    <label for="Experience">Experience</label>
                                    <select class="form-control" id="experienceSelect" name="experience" onchange="toggleExperienceTextBox()">
                                        <option>--Select--</option>
                                        <option id="1" value="Experienced">Experienced</option>
                                        <option id="2" value="Fresher">Fresher</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col"></div>

                                <div class="col">
                                    <div id="experienceTextBox" style="display:none;">
                                        <input type="text" class="form-control" id="experienceDetails" name="experienceDetails" placeholder="How many years experience" />
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col">
                                    <label for="floatingTextarea">Comments</label>
                                    <textarea class="form-control" placeholder="Leave a comment here" name="Comments" id="Comments"></textarea>
                                </div>

                                <div class="col">
                                    <div class="form-check">
                                        <label for="IsActive">

                                        </label>
                                        <input class="form-check-input" type="checkbox" name="IsActive" id="invalidCheck"> &nbsp; IsActive

                                        <div class="invalid-feedback">
                                            You must agree before submitting.
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col" hidden="hidden">
                                <label for="EmpId">EmpId</label>
                                <input type="text" class="form-control" id="EmpId" placeholder="EmpId" name="EmpId">
                            </div>


                        </div>
                        <div>
                            <button class="btn btn-success" type="submit" id="addmorebtn" value="Addmore" name="action">Add more</button>
                            <button class="btn btn-primary" type="submit" value="SaveAndSubmit" name="action">Submit & Back</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<script>
    //dropdown select

    function toggleExperienceTextBox() {
        var selectElement = document.getElementById("experienceSelect");
        var textBoxDiv = document.getElementById("experienceTextBox");
        var experienceInput = document.getElementById("experienceDetails");

        if (selectElement.value === "Fresher") {
            textBoxDiv.style.display = "none";
            experienceInput.value = "0";
        } else {
            textBoxDiv.style.display = "block";
            experienceInput.value = "";
        }
    }
</script>
