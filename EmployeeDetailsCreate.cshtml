@model DGHCM.Models.EmployeeDetail
@{
    ViewBag.Title = "EmployeeDetailsCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>
<form class="needs-validation" name="Createform" method="post" action="@Url.Action("EmployeeDetailsCreate","Employee")">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header  text-black d-flex flex-wrap justify-content-between align-items-center">

                <div class="card-title text-black mb-0 p-0">Add New Employee</div>


                <div>
                    <button class="btn btn-transparent border border-black" id="save" type="submit" value="SaveAndSubmit" name="action"><i class="fa-solid fa-floppy-disk"></i><span>&nbsp;Save</span></button>
                    <a href="~/Employee/EmployeeDetailsIndex" class="btn btn-transparent border border-black" data-toggle="modal"><i class="fa-solid fa-circle-arrow-left"></i> <span> Back</span></a>
                </div>

            </div>

            <div class="card-body p-4">
               
                        <div class="row mb-3">
                            <div class="col">
                                <label for="firstName" class="form-label">Name</label>
                                <input type="text" class="form-control" id="firstName" name="firstName" autocomplete="off" value="" />
                            </div>
                            <div class="col">
                                <label for="lastName" class="form-label">Last Name</label>
                                <input type="text" class="form-control" id="lastName" name="lastName" autocomplete="off" />
                            </div>
                            <div class="col">
                                <label for="designation" class="form-label">Designation</label>
                                <input type="text" class="form-control" id="designation" name="designation" autocomplete="off" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <label for="emailId" class="form-label">Email Id</label>
                                <input type="email" class="form-control" id="emailId" name="emailId" autocomplete="off" />
                            </div>

                            <div class="col">
                                <label for="DateOfBirth" class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" min="1995-12-31" />
                            </div>

                            <div class="col">
                                <label for="DateOfJoining" class="form-label">Date of Joining</label>
                                <input type="date" class="form-control" id="dateOfJoining" name="dateOfJoining" />
                            </div>
                        </div>

                        <div class="row mb-3">

                            <div class="col">
                                <label for="PhoneNo" class="form-label">Phone No</label>
                                <input type="tel" class="form-control" id="phoneNo" name="phoneNo" autocomplete="off" />
                            </div>

                            <div class="col">
                                <label for="Nationality" class="form-label">Nationality</label>
                                <input type="text" class="form-control" id="nationality" name="nationality" autocomplete="off">
                            </div>

                            <div class="col">
                                <label class="form-label">Employee Shift</label>
                                <select class="form-control" name="Shift" id="Shift">
                                    <option value="select">--Select--</option>
                                    <option value="Regular Shift">Regular Shift</option>
                                    <option value="Night Shift">Night Shift</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col">
                                <label for="AccountNo" class="form-label">Account No</label>
                                <input type="number" class="form-control" id="accountNo" name="accountNo" maxlength="12" autocomplete="off" />
                            </div>
                            <div class="col">
                                <label for="Gender" class="form-label">Gender</label>
                                <div class="form-check form-switch ps-0">
                                    <input type="checkbox" id="gender" name="gender" data-toggle="toggle" checked data-on="Male" data-off="Female" data-onstyle="primary" data-offstyle="Primary">
                                </div>
                                @*<input class="form-check-input" type="radio" name="gender" id="Male" value="Male"> Male
                                    <input class="form-check-input" type="radio" name="gender" id="Female" value="Female"> Female*@
                            </div>
                            <div class="col">
                                <label for="maritalstatus" class="form-label">Marital Status</label>
                                <div class="form-check form-switch ps-0">
                                    <input type="checkbox" name="maritalStatus" id="maritalStatus" data-toggle="toggle" checked data-on="Married" data-off="Unmarried" data-onstyle="primary" data-offstyle="Primary">
                                </div>
                            </div>
                        </div>
                        @*<label for="maritalstatus">Marital Status</label><br />

                            <input class="form-check-input" type="radio" id="Married" name="maritalStatus" value="Married"> Married
                            <input class="form-check-input" type="radio" id="UnMarried" name="maritalStatus" value="UnMarried"> Unmarried*@


                        <div class="row">
                            <div class="col">
                                <label for="employeeAddress" class="form-label">Address</label>
                                <textarea class="form-control" name="employeeAddress" id="employeeAddress"></textarea>
                            </div>

                            <div class="col">
                                <label class="form-check-label" for="flexSwitchCheckDefault">IsActive</label>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="isactive" name="isactive">

                                </div>

                                @*  <input class="form-check-input" type="checkbox" name="isactive" id="isactive">&nbsp;  Is Active*@
                            </div>

                            <div class="col"> </div>
                        </div>                 
                    </div>
                </div>
            </div>     
</form>

<script>
    $(document).ready(function () {
        $('form[name="Createform"]').submit(function (event) {
            event.preventDefault();
            var isValid = true;
            $('.invalid-feedback').remove();
            $('input[type="text"], input[type="email"], input[type="tel"], input[type="date"], select, textarea').each(function () {

                if ($.trim($(this).val()) == '') {
                    $(this).addClass('is-invalid');
                    $(this).after('<div class="invalid-feedback">Please fill out this field.</div>');
                    isValid = false;
                } else {
                    $(this).removeClass('is-invalid');
                    $(this).addClass('is-valid');
                }
            });
            if (!isValid) return;
            this.submit();
        });
    });
</script>



