@model List<DGHCM.ViewModel.DocumentVM>
@{
    ViewBag.Title = "DocumentDetailsCreate";
}

<script src="~/Scripts/bootstrap.bundle.js"></script>

<style>
    body {
        background-image: url('../../content/images/office image.png');
        background-size: cover;
    }

    .card {
        background: #fff5;
        backdrop-filter: blur(3px);
        
    }

    .card-header {
        background: #ffffffa1;
    }

    .card-body {
        background: #fffb;
    }

    thead th {
        background: #d5d1defe;
    }
</style>
<div class="container-fluid">
    <div class="card">
        <div class="card-header  text-black d-flex flex-wrap justify-content-between align-items-center">

            <div class="card-title text-black mb-0 p-0">Document Details</div>
            <div>
                <a href="#" class="btn btn-transparent" data-toggle="modal"><i class="fa-solid fa-floppy-disk"></i><span>&nbsp;Save</span></a>
                <a href="~/Employee/DocumentDetailsIndex" class="btn btn-transparent" data-toggle="modal"><i class="fa-solid fa-circle-arrow-left"></i> <span> Back</span></a>
            </div>
        </div>

        <div class="card-body">
            <form class="needs-validation" name="dcreate" method="post" id="fileForm" enctype="multipart/form-data">
                <div id="DocumentSections">
                    <div class="col-md-4 mb-3">
                        <span class="details">EmployeeName</span>
                        @Html.DropDownList("EmployeeList", null, "--select--", htmlAttributes: new { @id = "EmployeeId", @class = "form-control form-select selectpicker" })
                    </div>
                    <div class="col-md-4 mb-3">
                        <span class="details">DocumentType</span>
                        @Html.DropDownList("DocumentType", null, "--select--", htmlAttributes: new { @id = "DocumentType", @class = "form-control form-select selectpicker" })
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="formFileMultiple" class="form-label">Document</label>
                        <input class="form-control" type="file" name="file" id="fileInput" multiple>
                    </div>
                    <div class="col-md-4 mb-3">
                        <span class="details">Description</span>
                        <input type="text" class="form-control" id="credit" placeholder="enter description" name="Description">
                    </div>

                    <div class="form-check form-switch col-md-4 mb-3">
                        <input class="form-check-input" type="checkbox" id="active" name="IsActive">
                        <label class="form-check-label" for="flexSwitchCheckDefault">IsActive</label>
                    </div>
                </div>
                <div>
                    <button class="btn btn-transparent" type="submit" value="SaveAndSubmit" name="action">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function validate() {
        let name = document.forms["dcreate"]["EmployeeName"].value;
        if (name == "")
            alert("Please enter the name");
        return false;
        let name = document.forms["dcreate"]["DocumentType"].value;
        if (name == "")
            alert("Please enter the name");
        return false;
        let name = document.forms["dcreate"]["Description"].value;
        if (name == "")
            alert("Please enter the name");
        return false;
        let name = document.forms["dcreate"]["Upload/*(Max 300KB)*/"].value;
        if (name == "")
            alert("Please enter the name");
        return false;



    }
</script>

