@model DGHCM.Models.CustomerDetail
@{
    ViewBag.Title = "CustomerEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">

    <div class="card-body">
        <form action="/Finance/CustomerEdit" method="post">

            <input type="hidden" name="CustomerDetailsId" value="@Model.CustomerDetailsId" />
            <div class="col-md-4 mb-3">
                <label for="CustomerName">Customer Name</label>
                <input type="text" id="CustomerName" name="CustomerName" class="form-control" value="@Model.CustomerName" />
            </div>

            <div class="col-md-4 mb-3">
                <input class="form-check-input" type="checkbox" name="IsActive" id="invalidCheck" @(Model.IsActive ? "checked" : "") onchange="isActive()">
                <label for="IsActive">IsActive</label>
            </div>

            <button type="submit" name="action" value="save-and-continue" class="btn btn-success">Save</button>
        </form>

    </div>
</div>
<script>
    function isActive() {
        var checkbox = document.getElementById("IsActive");
        if (checkbox.checked) {
            checkbox.value = "true";
        } else {
            checkbox.value = "false";
        }
    }
</script>